{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>tksst/renovate-config"],
  "customDatasources": {
    "github-actions-runner-images": {
      "defaultRegistryUrlTemplate": "https://github.com/tksst/github-actions-runner/raw/toolset-hash-mirror/toolset-hash.txt",
      "format":"plain"
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch" : ["Dockerfile"],
      "matchStrings" : [
        "\\nARG RUNNER_VERSION=(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "actions/runner"
    },
    {
      "customType": "regex",
      "fileMatch" : ["Dockerfile"],
      "matchStrings" : [
        "\\nARG TOOLSET_JSON_DIGEST=(?<currentValue>.*?)\\n"
      ],
      "versioningTemplate": "git",
      "datasourceTemplate": "custom.github-actions-runner-images",
      "depNameTemplate": "images/ubuntu/toolsets/toolset-2204.json"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["ubuntu"],
      "matchDepTypes": ["final"],
      "matchUpdateTypes": ["digest"],
      "automerge": true
    },
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["actions/runner"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
