{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>tksst/renovate-config"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch" : ["Dockerfile"],
      "matchStrings" : [
        "\\nARG RUNNER_VERSION=(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "actions/runner"
    },
    {
      "customType": "regex",
      "fileMatch" : ["Dockerfile"],
      "matchStrings" : [
        "\\nARG TOOLSET_JSON_DIGEST=(?<currentDigest>.*?)\\n"
      ],
      "datasourceTemplate": "git-refs",
      "currentValueTemplate": "main",
      "depNameTemplate": "https://github.com/actions/runner-images.git"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["ubuntu"],
      "matchDepTypes": ["final"],
      "matchUpdateTypes": ["digest"],
      "automerge": true
    },
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["actions/runner"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
